---
import type { Event } from "@/types/envent";

const { event } = Astro.props as { event: Event };
---

<div
  class="mt-12 bg-zinc-900/50 backdrop-blur-sm border border-orange-500/10 rounded-lg p-6"
>
  <h2
    class="text-2xl font-serif mb-6 text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 via-orange-500 to-red-500"
  >
    Información del Evento
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <h3 class="text-xl text-orange-400 mb-2">Horario</h3>
      <p class="text-gray-300">
        Inicio del evento: {event.time?.start || "Por confirmar"}
      </p>
      <p class="text-gray-300">
        Concierto de Florencia Orquesta Band: {
          event.time?.concert || "Por confirmar"
        }
      </p>
    </div>
    <div>
      <h3 class="text-xl text-orange-400 mb-2">Repertorio</h3>
      <p class="text-gray-300">
        Selección especial de nuestro repertorio adaptada al evento.
      </p>
    </div>
  </div>
</div>
