---
import { Music, Info } from "lucide-react";
import type { Event } from "@/types/envent";

const { event } = Astro.props as { event: Event };
---

<div class="space-y-6">
  <!-- Info rápida del evento -->
  <div class="bg-zinc-900/50 backdrop-blur-sm border border-orange-500/10 rounded-xl p-6">
    <div class="flex items-center gap-2 mb-4">
      <Info className="w-5 h-5 text-orange-400" />
      <h2 class="text-lg font-semibold text-orange-400">Info del Evento</h2>
    </div>
    <div class="space-y-3">
      <div class="bg-zinc-800/30 rounded-lg p-3 border border-orange-500/10">
        <p class="text-xs text-gray-400 mb-1">Tipo</p>
        <p class="text-sm font-medium text-white">{event.type}</p>
      </div>
      {event.time && (
        <div class="bg-zinc-800/30 rounded-lg p-3 border border-orange-500/10">
          <p class="text-xs text-gray-400 mb-1">Duración estimada</p>
          <p class="text-sm font-medium text-white">
            {event.time.start} - {event.time.end || "Final del evento"}
          </p>
        </div>
      )}
    </div>
  </div>

  <!-- Sobre la banda -->
  <div class="bg-gradient-to-br from-orange-500/5 to-red-500/5 backdrop-blur-sm border border-orange-500/10 rounded-xl p-6">
    <div class="flex items-center gap-2 mb-4">
      <Music className="w-5 h-5 text-orange-400" />
      <h2 class="text-lg font-semibold text-orange-400">Sobre la Banda</h2>
    </div>
    <p class="text-gray-300 text-sm leading-relaxed mb-4">
      Florencia Orquesta Band es una agrupación musical con amplia experiencia en eventos de todo tipo.
    </p>
    <div class="space-y-2">
      <div class="flex items-center gap-2 text-sm">
        <div class="w-2 h-2 rounded-full bg-orange-500"></div>
        <span class="text-gray-400">Repertorio variado</span>
      </div>
      <div class="flex items-center gap-2 text-sm">
        <div class="w-2 h-2 rounded-full bg-orange-500"></div>
        <span class="text-gray-400">Músicos profesionales</span>
      </div>
      <div class="flex items-center gap-2 text-sm">
        <div class="w-2 h-2 rounded-full bg-orange-500"></div>
        <span class="text-gray-400">Experiencia comprobada</span>
      </div>
    </div>
  </div>
</div>
