---
import { Image } from "astro:assets";

const { image, name, instrument, bio } = Astro.props;
---

<div class="group relative">
  <div
    class="relative overflow-hidden rounded-lg mb-4 bg-zinc-900 max-w-[300px]"
  >
    <div
      class="absolute inset-0 bg-gradient-to-br from-yellow-400/20 via-orange-500/20 to-red-500/20 opacity-0 group-hover:opacity-100 transition-all duration-500"
    >
    </div>
    <Image
      src={image || "/placeholder.svg"}
      alt={name}
      width={300}
      height={200}
      class="transform group-hover:scale-105 transition-transform duration-500 object-cover bg-center aspect-video"
    />
  </div>
  <h3
    class="text-2xl font-semibold mb-1 text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-orange-500"
  >
    {name}
  </h3>
  <p
    class="text-xl text-gray-400 group-hover:text-orange-400 transition-colors"
  >
    {instrument}
  </p>
</div>
