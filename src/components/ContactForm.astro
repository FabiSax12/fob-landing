---
import ThemedButton from "@/components/ui/ThemedButton.astro";
import TextGradient from "@/components/ui/TextGradient.astro";
---

<div
  class="bg-zinc-800/50 backdrop-blur-sm border border-orange-500/10 rounded-lg p-6 max-w-2xl mx-auto"
>
  <h2
    class="text-2xl font-serif mb-6 text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 via-orange-500 to-red-500"
  >
    Envíanos un mensaje
  </h2>
  <form id="contact-form" class="space-y-4" onsubmit="handleSubmit(event)">
    <div>
      <label for="name" class="block text-gray-400 mb-2">Nombre</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-4 py-2 rounded-lg bg-zinc-900 text-white border border-zinc-700 focus:outline-none focus:ring-2 focus:ring-orange-500"
      />
    </div>
    <div class="md:flex w-full gap-4">
      <div class="flex-1">
        <label for="email" class="block text-gray-400 mb-2"
          >Correo Electrónico</label
        >
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-4 py-2 rounded-lg bg-zinc-900 text-white border border-zinc-700 focus:outline-none focus:ring-2 focus:ring-orange-500"
        />
      </div>
      <div class="flex-1">
        <label for="tel" class="block text-gray-400 mb-2"
          >Número de contacto</label
        >
        <div class="flex items-center bg-zinc-700 rounded-lg">
          <span class="px-2 align-middle">+506</span>
          <input
            type="tel"
            id="tel"
            name="tel"
            required
            class="w-full px-4 py-2 rounded-lg bg-zinc-900 text-white border border-zinc-700 focus:outline-none focus:ring-2 focus:ring-orange-500"
          />
        </div>
      </div>
    </div>
    <div>
      <label for="message" class="block text-gray-400 mb-2">Mensaje</label>
      <textarea
        id="message"
        name="message"
        rows="4"
        required
        class="w-full px-4 py-2 rounded-lg bg-zinc-900 text-white border border-zinc-700 focus:outline-none focus:ring-2 focus:ring-orange-500"
      ></textarea>
    </div>
    <ThemedButton type="submit" class="w-full">
      <TextGradient
        className="text-xl font-semibold group-hover:text-orange-400"
      >
        Enviar Mensaje
      </TextGradient>
    </ThemedButton>
  </form>
</div>

<!-- Modal de éxito -->
<div
  id="success-message"
  class="fixed inset-0 flex items-center justify-center bg-black/80 backdrop-blur-sm z-50 hidden"
>
  <div class="bg-zinc-900 rounded-lg p-6 max-w-md text-center">
    <h2
      class="text-2xl font-serif text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 via-orange-500 to-red-500 mb-4"
    >
      ¡Mensaje enviado con éxito!
    </h2>
    <p class="text-gray-400 mb-6">
      Muchas gracias por contactarnos. Hemos recibido tu mensaje y te
      responderemos lo antes posible.
    </p>
    <button
      onclick="closeMessage('success-message')"
      class="px-6 py-3 rounded-lg bg-gradient-to-r from-yellow-400 via-orange-500 to-red-500 text-white text-lg font-medium shadow-lg hover:scale-105 transition-transform"
    >
      Cerrar
    </button>
  </div>
</div>

<!-- Modal de error -->
<div
  id="error-message"
  class="fixed inset-0 flex items-center justify-center bg-black/80 backdrop-blur-sm z-50 hidden"
>
  <div class="bg-zinc-900 rounded-lg p-6 max-w-md text-center">
    <h2
      class="text-2xl font-serif text-transparent bg-clip-text bg-gradient-to-r from-red-500 via-orange-500 to-yellow-400 mb-4"
    >
      ¡Error al enviar el mensaje!
    </h2>
    <p class="text-gray-400 mb-6">
      Ocurrió un problema al enviar tu mensaje. Por favor, inténtalo de nuevo
      más tarde.
    </p>
    <button
      onclick="closeMessage('error-message')"
      class="px-6 py-3 rounded-lg bg-gradient-to-r from-red-500 via-orange-500 to-yellow-400 text-white text-lg font-medium shadow-lg hover:scale-105 transition-transform"
    >
      Cerrar
    </button>
  </div>
</div>

<script is:inline>
  function handleSubmit(event) {
    event.preventDefault();
    const form = document.querySelector("#contact-form");
    const formData = new FormData(form);

    fetch("https://formspree.io/f/xblgqply", {
      method: "POST",
      body: formData,
      headers: {
        Accept: "application/json",
      },
    })
      .then((response) => {
        if (response.ok) {
          showMessage("success-message");
          form.reset();
        } else {
          showMessage("error-message");
        }
      })
      .catch((error) => {
        console.error("Error:", error);
        showMessage("error-message");
      });
  }

  function showMessage(messageId) {
    const message = document.querySelector(`#${messageId}`);
    message.classList.remove("hidden");
  }

  function closeMessage(messageId) {
    const message = document.querySelector(`#${messageId}`);
    message.classList.add("hidden");
  }
</script>
