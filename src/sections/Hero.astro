---
import TextGradient from "@/components/ui/TextGradient.astro";
import ThemedButton from "@/components/ui/ThemedButton.astro";
import { Image } from "astro:assets";
---

<section class="w-full min-h-screen relative overflow-hidden">
  <div
    class="absolute inset-0 bg-gradient-to-br from-black via-zinc-900 to-black"
  >
    <div
      class="absolute inset-0 opacity-30 bg-[radial-gradient(circle_at_50%_50%,rgba(255,165,0,0.3),rgba(255,69,0,0.2),transparent_50%)] animate-pulse"
    >
    </div>
  </div>

  <div
    class="relative z-10 container mx-auto flex flex-col items-center justify-center min-h-screen px-4 py-20"
  >
    <Image
      src="/logo_simple.webp"
      alt="Florencia Orquesta Band"
      width={800}
      height={400}
      loading="eager"
      sizes={"(max-width: 800px) 100vw, 800px"}
      format="webp"
      quality={80}
      class="mx-auto animate-float"
    />
    <p class="text-2xl md:text-3xl mt-8 mb-12 text-center">
      <TextGradient isLong isAnimated className="font-light">
        Creando momentos inolvidables a través de la música
      </TextGradient>
    </p>

    <ThemedButton href="/contacto">
      <TextGradient
        className="text-xl font-semibold group-hover:text-orange-400"
      >
        Contáctanos
      </TextGradient>
    </ThemedButton>
  </div>
</section>
