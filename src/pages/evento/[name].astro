---
import { ArrowLeft, Calendar, MapPin, Clock, Ticket, Share2, Music } from "lucide-react";
import { events } from "@/data/data";
import Layout from "@/layouts/Layout.astro";

import type { GetStaticPaths } from "astro";

export const getStaticPaths = (() => {
  return events.map((event) => {
    return {
      params: { name: event.name.replace(/\s+/g, "-").toString() },
    };
  });
}) satisfies GetStaticPaths;

const { name } = Astro.params;

const event = events.find((event) => event.name.replace(/\s+/g, "-") === name);

if (!event) {
  throw new Error(`Evento no encontrado: ${name}`);
}

const formatDate = (dateString: string) => {
  const [year, month, day] = dateString.split("-").map(Number);
  const date = new Date(year, month - 1, day);
  return new Intl.DateTimeFormat("es-CR", {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
};

const formatShortDate = (dateString: string) => {
  const [year, month, day] = dateString.split("-").map(Number);
  const date = new Date(year, month - 1, day);
  return {
    day: date.getDate(),
    month: new Intl.DateTimeFormat("es-CR", { month: "short" }).format(date).toUpperCase(),
    year: date.getFullYear()
  };
};

const shortDate = formatShortDate(event.date);

const hashtagsForSharing = event.social?.hashtags
  .map((tag) => tag.replace("#", ""))
  .join(",") || "";

const shareUrl = event.seo?.canonical || `https://www.florenciaorquestaband.com/eventos/${event.name.toLowerCase().replace(/\s+/g, "-")}`;
const shareText = `ðŸŽµ ${event.name} - ${formatDate(event.date)}`;
---

<Layout
  title={event.seo?.title}
  description={event.seo?.description}
  ogImage={event.seo?.ogImage}
  keywords={event.seo?.keywords?.join(", ")}
  canonical={event.seo?.canonical}
  og={event.seo?.og}
>
  <main class="min-h-screen bg-black">
    <!-- Hero Section -->
    <section class="relative min-h-[70vh] flex items-end">
      <!-- Background -->
      {event.image ? (
        <img
          src={event.image}
          alt={event.name}
          class="absolute inset-0 w-full h-full object-cover"
        />
      ) : (
        <div class="absolute inset-0 bg-gradient-to-br from-orange-900 via-red-900 to-black"></div>
      )}

      <!-- Overlay -->
      <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-black/30"></div>

      <!-- Back button -->
      <a
        href="/"
        class="absolute top-6 left-6 z-20 inline-flex items-center px-4 py-2 bg-black/50 backdrop-blur-sm rounded-full text-white hover:bg-black/70 transition-all border border-white/10"
      >
        <ArrowLeft className="w-4 h-4 mr-2" />
        <span class="text-sm font-medium">Volver</span>
      </a>

      <!-- Badge tipo -->
      <div class="absolute top-6 right-6 z-20">
        <span class={`px-4 py-2 rounded-full text-sm font-bold backdrop-blur-sm border ${event.type === "Publico" ? "bg-green-500/20 text-green-400 border-green-500/30" : "bg-purple-500/20 text-purple-400 border-purple-500/30"}`}>
          {event.type === "Publico" ? "Evento PÃºblico" : "Evento Privado"}
        </span>
      </div>

      <!-- Hero Content -->
      <div class="relative z-10 w-full px-6 pb-12 pt-32">
        <div class="max-w-4xl mx-auto">
          <!-- Date badge -->
          <div class="inline-flex items-center gap-4 mb-6">
            <div class="flex flex-col items-center justify-center w-20 h-20 bg-gradient-to-br from-orange-500 to-red-600 rounded-2xl shadow-2xl shadow-orange-500/30">
              <span class="text-3xl font-bold text-white leading-none">{shortDate.day}</span>
              <span class="text-xs font-semibold text-white/90 uppercase tracking-wider">{shortDate.month}</span>
            </div>
            <div class="text-white/70">
              <p class="text-lg font-medium">{formatDate(event.date)}</p>
            </div>
          </div>

          <!-- Title -->
          <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
            {event.name}
          </h1>

          <!-- Location quick info -->
          <div class="flex items-center gap-2 text-white/80">
            <MapPin className="w-5 h-5 text-orange-400" />
            <span class="text-lg">{event.location.name}</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <section class="relative z-10 -mt-6">
      <div class="max-w-4xl mx-auto px-6">
        <!-- Quick Actions Bar -->
        <div class="flex flex-wrap gap-4 mb-12 p-6 bg-zinc-900/90 backdrop-blur-xl rounded-2xl border border-white/10 shadow-2xl">
          {event.time && (
            <div class="flex items-center gap-3 px-4 py-2 bg-zinc-800 rounded-xl">
              <Clock className="w-5 h-5 text-orange-400" />
              <div>
                <p class="text-xs text-gray-400">Hora inicio</p>
                <p class="text-white font-semibold">{event.time.start}</p>
              </div>
            </div>
          )}

          {event.ticket && (
            <div class="flex items-center gap-3 px-4 py-2 bg-zinc-800 rounded-xl">
              <Ticket className="w-5 h-5 text-orange-400" />
              <div>
                <p class="text-xs text-gray-400">{event.ticket.presale ? "Desde" : "Entrada"}</p>
                <p class="text-white font-semibold">
                  {event.ticket.presale?.price || event.ticket.regular.price}
                </p>
              </div>
            </div>
          )}

          <div class="flex items-center gap-3 px-4 py-2 bg-zinc-800 rounded-xl">
            <Music className="w-5 h-5 text-orange-400" />
            <div>
              <p class="text-xs text-gray-400">Artista</p>
              <p class="text-white font-semibold">Florencia Orquesta Band</p>
            </div>
          </div>
        </div>

        <!-- Description -->
        {event.description && (
          <div class="mb-12">
            <h2 class="text-2xl font-bold text-white mb-4">Acerca del evento</h2>
            <p class="text-lg text-gray-300 leading-relaxed">{event.description}</p>
          </div>
        )}

        <!-- Schedule & Tickets Grid -->
        <div class="grid md:grid-cols-2 gap-6 mb-12">
          <!-- Horarios -->
          {event.time && (
            <div class="bg-zinc-900/50 backdrop-blur-sm rounded-2xl p-6 border border-white/5">
              <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
                <Clock className="w-5 h-5 text-orange-400" />
                Horarios
              </h3>
              <div class="space-y-4">
                <div class="flex justify-between items-center py-3 border-b border-white/5">
                  <span class="text-gray-400">Apertura</span>
                  <span class="text-xl font-bold text-white">{event.time.start}</span>
                </div>
                <div class="flex justify-between items-center py-3 border-b border-white/5">
                  <span class="text-gray-400">Concierto</span>
                  <span class="text-xl font-bold text-orange-400">{event.time.concert}</span>
                </div>
                {event.time.end && (
                  <div class="flex justify-between items-center py-3">
                    <span class="text-gray-400">Cierre</span>
                    <span class="text-xl font-bold text-white">{event.time.end}</span>
                  </div>
                )}
              </div>
            </div>
          )}

          <!-- Entradas -->
          {event.ticket && (
            <div class="bg-gradient-to-br from-orange-500/10 to-red-500/10 backdrop-blur-sm rounded-2xl p-6 border border-orange-500/20">
              <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
                <Ticket className="w-5 h-5 text-orange-400" />
                Entradas
              </h3>
              <div class="space-y-4">
                {event.ticket.presale && (
                  <div class="bg-black/30 rounded-xl p-4">
                    <div class="flex justify-between items-start mb-2">
                      <span class="text-sm text-yellow-400 font-semibold">âš¡ Preventa</span>
                      <span class="text-2xl font-bold text-yellow-400">{event.ticket.presale.price}</span>
                    </div>
                    {event.ticket.presale.link && (
                      <a
                        href={event.ticket.presale.link}
                        class="block w-full text-center py-2 mt-3 bg-gradient-to-r from-yellow-500 to-orange-500 text-black font-bold rounded-lg hover:shadow-lg hover:shadow-yellow-500/30 transition-all"
                      >
                        Comprar
                      </a>
                    )}
                  </div>
                )}
                <div class={event.ticket.presale ? "bg-black/20 rounded-xl p-4" : "bg-black/30 rounded-xl p-4"}>
                  <div class="flex justify-between items-start mb-2">
                    <span class="text-sm text-gray-400 font-semibold">{event.ticket.presale ? "En taquilla" : event.ticket.type}</span>
                    <span class="text-2xl font-bold text-white">{event.ticket.regular.price}</span>
                  </div>
                  {event.ticket.regular.link && !event.ticket.presale && (
                    <a
                      href={event.ticket.regular.link}
                      class="block w-full text-center py-2 mt-3 bg-gradient-to-r from-orange-500 to-red-500 text-white font-bold rounded-lg hover:shadow-lg hover:shadow-orange-500/30 transition-all"
                    >
                      Comprar
                    </a>
                  )}
                </div>
              </div>
            </div>
          )}
        </div>

        <!-- Location & Map -->
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
            <MapPin className="w-6 h-6 text-orange-400" />
            UbicaciÃ³n
          </h2>
          <div class="bg-zinc-900/50 backdrop-blur-sm rounded-2xl overflow-hidden border border-white/5">
            <div class="p-6">
              <p class="text-xl font-semibold text-white mb-1">{event.location.name}</p>
              {event.location.address && (
                <p class="text-gray-400">{event.location.address}</p>
              )}
            </div>
            <div class="h-80 w-full">
              <iframe
                src={event.location.src}
                class="w-full h-full border-0"
                allowfullscreen
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
              ></iframe>
            </div>
          </div>
        </div>

        <!-- Social Share -->
        {event.social?.hashtags && event.social.hashtags.length > 0 && (
          <div class="mb-12 pb-12">
            <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
              <Share2 className="w-6 h-6 text-orange-400" />
              Compartir evento
            </h2>

            <div class="flex flex-wrap gap-3 mb-6">
              <a
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(shareUrl)}&hashtags=${hashtagsForSharing}`}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-5 py-3 bg-zinc-800 hover:bg-zinc-700 text-white rounded-xl transition-all border border-white/5 hover:border-orange-500/30"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                Twitter
              </a>
              <a
                href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-5 py-3 bg-zinc-800 hover:bg-zinc-700 text-white rounded-xl transition-all border border-white/5 hover:border-orange-500/30"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9.101 23.691v-7.98H6.627v-3.667h2.474v-1.58c0-4.085 1.848-5.978 5.858-5.978.401 0 .955.042 1.468.103a8.68 8.68 0 0 1 1.141.195v3.325a8.623 8.623 0 0 0-.653-.036 26.805 26.805 0 0 0-.733-.009c-.707 0-1.259.096-1.675.309a1.686 1.686 0 0 0-.679.622c-.258.42-.374.995-.374 1.752v1.297h3.919l-.386 3.667h-3.533v7.98H9.101z"/>
                </svg>
                Facebook
              </a>
              <a
                href={`https://wa.me/?text=${encodeURIComponent(shareText + " " + shareUrl)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-5 py-3 bg-zinc-800 hover:bg-zinc-700 text-white rounded-xl transition-all border border-white/5 hover:border-orange-500/30"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
                WhatsApp
              </a>
            </div>

            <div class="flex flex-wrap gap-2">
              {event.social.hashtags.map((tag) => (
                <span class="px-3 py-1.5 bg-zinc-800/50 rounded-full text-sm text-orange-400/80 border border-orange-500/10">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        )}
      </div>
    </section>
  </main>
</Layout>
